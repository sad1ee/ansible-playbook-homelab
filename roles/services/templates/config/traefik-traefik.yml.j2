# yaml-language-server: $schema=https://json.schemastore.org/traefik-v3.json

accessLog: true
ping: {}

log:
  level: DEBUG # DEBUG, INFO, WARN, ERROR

global:
  checkNewVersion: false
  sendAnonymousUsage: false

api:
  dashboard: true
  disableDashboardAd: true

providers:
  docker:
    endpoint: "{{ services_docker_proxy_host }}"
    exposedByDefault: false
    network: traefik

entryPoints:
  web-internal:
    address: ":{{ services_webui_port.traefik_webinternal }}"
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
          permanent: true
    # NOTE: wrong
    # forwardedHeaders:
    #   trustedIPs: "{{ services_traefik_network.traefik }}" # "{{ services_lan.network }}{{ services_lan.cidr }}"
    # proxyProtocol:
    #   trustedIPs: "{{ services_traefik_network.traefik }}" # "{{ services_lan.network }}{{ services_lan.cidr }}"
  websecure:
    address: ":443"
    http:
      tls:
        certResolver: cloudflare
    asDefault: true
    # forwardedHeaders:
    #   trustedIPs: "{{ services_traefik_network.traefik }}" # "{{ services_lan.network }}{{ services_lan.cidr }}"
    # proxyProtocol:
    #   trustedIPs: "{{ services_traefik_network.traefik }}" # "{{ services_lan.network }}{{ services_lan.cidr }}"

certificatesResolvers:
  cloudflare:
    acme:
      email: "{{ services_email_homelab }}"
      storage: /certs/acme.json
      dnsChallenge:
        provider: cloudflare
        resolvers: ["1.1.1.1:53", "8.8.8.8:53"]
