name: homepage

services:

  homepage:
    image: ghcr.io/gethomepage/homepage:latest

    environment:
      TZ: "{{ services_timezone }}"
      HOMEPAGE_ALLOWED_HOSTS: "homepage.{{ services_domain_base }}"

    volumes:
      - "{{ services_path.homepage }}:/app/config"
      - /var/run/docker.sock:/var/run/docker.sock:ro

    healthcheck:
      disable: true

    container_name: homepage
    hostname: homepage
    restart: unless-stopped

    networks:
      - traefik

networks:
  traefik:
    external: true
    name: traefik
