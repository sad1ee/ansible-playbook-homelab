name: authelia

services:

  authelia:
    image: docker.io/authelia/authelia:latest

    environment:
      PUID: "{{ services_puid }}"
      PGID: "{{ services_pgid }}"
      TZ: "{{ services_timezone }}"

    volumes:
      - "{{ services_path.authelia }}:/config"

    depends_on:
      postgres:
        condition: service_healthy
      redis:
        condition: service_healthy

    container_name: authelia
    hostname: authelia
    restart: unless-stopped

    networks:
      - traefik
      - postgres
      - redis

networks:
  traefik:
    external: true
    name: traefik
  postgres:
    external: true
    name: postgres
  redis:
    external: true
    name: redis
