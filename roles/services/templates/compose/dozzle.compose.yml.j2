services:
  dozzle:
    image: "amir20/dozzle:latest"

    labels:
      traefik.enable: true
      traefik.http.routers.dozzle.rule: Host(`dozzle.{{ services_domain_base }}`)
      traefik.http.services.dozzle.loadbalancer.server.port: "{{ services_webui_port.dozzle }}"
      traefik.http.routers.dozzle.middlewares: authelia-basic@docker

      dev.dozzle.group: "Admin"

    environment:
      DOZZLE_LEVEL: info
      DOCKER_HOST: "{{ services_docker_proxy_host }}"
      DOZZLE_HOSTNAME: homeserver
      DOZZLE_ENABLE_ACTIONS: true
      DOZZLE_NO_ANALYTICS: true
      DOZZLE_REMOTE_AGENT: "netserver.lan:7007"
      DOZZLE_AUTH_PROVIDER: "forward-proxy"

    volumes:
      - "/etc/localtime:/etc/localtime:ro"
      - "{{ services_path.dozzle }}:/data"

    healthcheck:
      test: ["CMD", "/dozzle", "healthcheck"]
      interval: "300s"
      timeout: "30s"
      retries: "3"
      start_period: "60s"
      start_interval: "2s"

    container_name: "dozzle"
    hostname: "dozzle"
    restart: "unless-stopped"

    networks:
      - "traefik"
      - "docker-proxy"
