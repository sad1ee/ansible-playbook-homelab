services:
  prowlarr:
    image: lscr.io/linuxserver/prowlarr:latest

    labels:
      traefik.enable: true
      traefik.http.routers.prowlarr.rule: Host(`prowlarr.{{ services_domain_base }}`)
      traefik.http.services.prowlarr.loadbalancer.server.port: "{{ services_webui_port.prowlarr }}"

    environment:
      PUID: "{{ services_puid }}"
      PGID: "{{ services_pgid }}"
      TZ: "{{ services_timezone }}"

    volumes:
      - "{{ services_path.prowlarr }}:/config"

    container_name: prowlarr
    hostname: prowlarr
    restart: unless-stopped

    networks:
      - traefik
      - flaresolverr
