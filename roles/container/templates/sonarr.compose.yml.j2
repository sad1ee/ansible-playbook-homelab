services:
  sonarr:
    image: lscr.io/linuxserver/sonarr:latest

    labels:
      traefik.enable: true
      traefik.http.routers.sonarr.rule: Host(`sonarr.{{ container_domain_base }}`)
      traefik.http.services.sonarr.loadbalancer.server.port: "{{ container_webui_port.sonarr }}"
      traefik.http.routers.sonarr.middlewares: authelia@docker

      dev.dozzle.group: Arr

    environment:
      PUID: "{{ container_puid }}"
      PGID: "{{ container_pgid }}"
      TZ: "{{ container_tz }}"

    volumes:
      - "{{ container_path.sonarr.config }}:/config"
      - "{{ container_path.sonarr.cache }}:/config/MediaCover"
      - "{{ container_path.media }}:/media"

    healthcheck:
      test:
        [CMD, wget, -q, --tries=1, --spider, "http://127.0.0.1:{{ container_webui_port.sonarr}}"]
      interval: 300s
      timeout: 30s
      retries: "3"
      start_period: 60s
      start_interval: 2s

    container_name: sonarr
    hostname: sonarr
    restart: unless-stopped

    networks:
      - traefik
      - flaresolverr
      - recyclarr

networks:
  traefik:
    external: true
    name: traefik
  flaresolverr:
    external: true
    name: flaresolverr
  recyclarr:
    external: true
    name: recyclarr
