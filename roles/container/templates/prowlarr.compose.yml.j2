services:
  prowlarr:
    image: lscr.io/linuxserver/prowlarr:latest

    labels:
      traefik.enable: true
      traefik.http.routers.prowlarr.rule: Host(`prowlarr.{{ container_domain_base }}`)
      traefik.http.services.prowlarr.loadbalancer.server.port: "9696"
      traefik.http.routers.prowlarr.middlewares: authelia@docker

      dev.dozzle.group: Arr

    environment:
      PUID: "{{ container_puid }}"
      PGID: "{{ container_pgid }}"
      TZ: "{{ container_tz }}"

    volumes:
      - "{{ container_path.prowlarr }}:/config"

    healthcheck:
      test: [CMD, wget, -q, --tries=1, --spider, http://127.0.0.1:9696]
      interval: 300s
      timeout: 30s
      retries: "3"
      start_period: 60s
      start_interval: 2s

    container_name: prowlarr
    hostname: prowlarr
    restart: unless-stopped

    networks:
      - traefik
      - flaresolverr

networks:
  traefik:
    external: true
    name: traefik
  flaresolverr:
    external: true
    name: flaresolverr
