services:
  bazarr:
    image: lscr.io/linuxserver/bazarr:latest

    labels:
      traefik.enable: true
      traefik.http.routers.bazarr.rule: Host(`bazarr.{{ container_domain_base }}`)
      traefik.http.services.bazarr.loadbalancer.server.port: "6767"
      traefik.http.routers.bazarr.middlewares: authelia@docker

      dev.dozzle.group: Arr

    environment:
      PUID: "{{ container_puid }}"
      PGID: "{{ container_pgid }}"
      TZ: "{{ container_tz }}"

    volumes:
      - "{{ container_path.bazarr.config }}:/config"
      - "{{ container_path.bazarr.cache }}:/config/cache"
      - "{{ container_path.media }}/library:/media/library"

    healthcheck:
      test: [CMD, wget, -q, --tries=1, --spider, http://127.0.0.1:6767]
      interval: 300s
      timeout: 30s
      retries: "3"
      start_period: 60s
      start_interval: 2s

    container_name: bazarr
    hostname: bazarr
    restart: unless-stopped

    networks:
      - traefik

networks:
  traefik:
    external: true
    name: traefik
