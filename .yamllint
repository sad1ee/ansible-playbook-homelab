---
extends: default

rules:
  document-start: "disable"

  line-length:
    max: 100
    level: "warning"
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: true

  quoted-strings:
    quote-type: "any"
    required: only-when-needed

  braces:
    max-spaces-inside: 1

  brackets:
    max-spaces-inside: 1

  comments:
    min-spaces-from-content: 1

yaml-files:
  - "*.yaml.j2"
  - "*.yml.j2"
